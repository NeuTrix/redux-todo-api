extends layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/api/users",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='email', name="email", placeholder='Enter email')
      .form-group
        input.form-control(type='email', name="emailConfirm", placeholder='Enter emailConfirm')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password').form-group
      .form-group
        input.form-control(type='password', name="passwordConfirm", placeholder='PasswordConfirm')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel